{
  "name": "@noriginmedia/norigin-spatial-navigation",
  "version": "3.0.0",
  "description": "SolidJS spatial navigation for TV and remote control",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepare": "npm run build",
    "publish": "npm publish --access public",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoriginMedia/norigin-spatial-navigation.git"
  },
  "keywords": [
    "solid",
    "solidjs",
    "spatial-navigation",
    "remote-control-navigation",
    "tv-navigation"
  ],
  "author": "Dmitriy Bryokhin <dmitriy.bryokhin@noriginmedia.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucaskfp/Norigin-Spatial-Navigation-SolidJS/issues"
  },
  "homepage": "https://github.com/lucaskfp/Norigin-Spatial-Navigation-SolidJS#readme",
  "peerDependencies": {
    "solid-js": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.1.0",
    "solid-js": "^1.8.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
