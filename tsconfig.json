{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "stripInternal": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "target": "ES2020",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "src/__tests__"]
}
