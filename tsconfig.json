{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitAny": true,
    "stripInternal": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES5",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es2015", "dom"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
